{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.Hosting.Lifetime": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=Bang;Integrated Security=True;Connect Timeout=30;Encrypt=False;TrustServerCertificate=False;ApplicationIntent=ReadWrite;MultiSubnetFailover=False"
  },
  "AllowedOrigins": [
    "http://localhost:4200",
    "https://localhost:4200"
  ],
  "Authentication": {
    "Authority": "https://localhost:5001",
    "Audience": "useridentity-api"
  },
  "IdentityServer": {
    "IdentityResources": [
      {
        "Name": "openid",
        "DisplayName": "User identifier",
        "Required": true,
        "UserClaims": [ "sub" ]
      }
    ],
    "ApiResources": [
      {
        "Name": "useridentity-api",
        "DisplayName": "User Identity API",
        "Scopes": [
          "api-openid"
        ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "api-openid",
        "DisplayName": "OpenID",
        "Description": "Open ID"
      }
    ],
    "Clients": [
      {
        "ClientId": "useridentity-swagger",
        "ClientName": "The swagger client of the application",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequireConsent": false,
        "AllowedScopes": [
          "openid",
          "api-openid"
        ],
        "RedirectUris": [
          "https://localhost:5001/swagger/oauth2-redirect.html"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:5000",
          "https://localhost:5001"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true
      },
      {
        "ClientId": "useridentity-angular",
        "ClientName": "User Identity",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequireConsent": false,
        "AllowedScopes": [
          "openid",
          "api-openid"
        ],

        "RedirectUris": [
          "http://localhost:4200"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:4200"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:4200"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true
      }
    ]
  }
}
